<%= @registration = Registration.new%>
<div class="row">
	<%= simple_form_for(@registration, :url => checkout_path) do |f| %>

		<!-- Display errors, if any -->
		<% if @registration.errors.any? %>
			<div id="error_explanation">
				<h6><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h6>
				<% @registration.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</div>
  	<% end %>
		
		
		
		<div class="row">
			<div class="input-field col s11">
				<i class="material-icons prefix">credit_card</i>
				<%= f.label :credit_card_number %>
    		<%= f.number_field :credit_card_number %>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s11">
				<i class="material-icons prefix">date_range</i>
				<%= f.label :expiration_month %>
    		<%= f.number_field :expiration_month %>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s11">
				<i class="material-icons prefix">date_range</i>
				<%= f.label :expiration_year, "Expiration year (YYYY)" %>
    		<%= f.number_field :expiration_year %>
			</div>
		</div>
		<div class ="row">
			<div class="input-field col s11">
				<button class="btn waves-effect waves-light">
					<i class="material-icons right">send</i>
					<%= f.submit %>
				</button>
			</div>
		</div>
	<% end %>
</div>