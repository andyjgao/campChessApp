
<div >
  <%= hidden_field_tag "family_id", current_user.family.id %>
  <div class="card with-cards col s6">
    <div class="card-content ">

      <% if current_user.family.students.empty? %>
        <p>No students at this time</p>
      <% else %>
        <span class="card-title">Your Children/Students (<%= current_user.family.students.size %>)</span>
        <table>
        <thead>
          <tr>
            <th>Student</th>
            <th>Rating</th>

          </tr>
        </thead>

        <tbody>
          <% current_user.family.students.each do |s| %>
          <tr >

            <td><%= link_to s.proper_name, student_path(s) %></td>
            <td><%= s.rating%></td>
          </tr>

        <% end %>
        </tbody>
        </table>
      <% end %>
    </div>
  </div>



<div class="card with-cards col s5" style="margin-left: 3em">
<div class="card-content">

  <span class="card-title">
    Recommended for you<br /><br />
  </span>
 <% @random.each do |camp| %>
    <div class="row">
      <!-- <div class="col s4 m4"> -->
        <div class="card lol">
          <div class="card-image">
            <%= image_tag('img_not_available.png', border:0)%>
            </div>
            <div class="card-content">

            <h5 class="heading link text">
              <%= link_to camp.name, camp_path(camp) %>
            </h5>

              <p class="text">
                <%= camp.cost.nil? ? "N/A" : number_to_currency(camp.cost) %>
              </p>
            </div>
          </div>
      <!-- </div> -->

  </div>
  <% end %>


</div>
</div>
