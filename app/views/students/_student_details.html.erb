

<div class="card with-cards">
  <div class="card-content">

    <span class="card-title">
      <h3>Student Details</h3>
    </span>

    <p><strong>Name: </strong><%= @student.proper_name %></p>

    <p><strong>Family Name: </strong><%= @student.family.family_name.capitalize %></p>
    <p><strong>Age: </strong><%= @student.age%></p>
    <p><strong>Age: </strong><%= @student.date_of_birth%></p>
    <p><strong>Rating</strong>
      <% if @student.rating < 100 %>
      	<%= "Unrated"%><br /><br />
      <% else %>
      	<%= @student.rating %><br /><br />
      <% end %></p>
    <p><strong>Active?&nbsp;&nbsp;</strong>
      <%= @student.active ? "Yes" : "No" %><br /><br /></p>

  <div class="card-action">
    <% if can? :edit, Student %>
      <%= link_to 'Edit', edit_student_path(@student), :class=>"btn waves-effect waves-light blue" %>
    <% end %>


    <%= link_to 'Back', home_path, :class=>"btn waves-effect waves-light blue" %>
  </div>
</div>
