<% if @students.empty? %>
  <h3>There are no students in the system at this time</h3>
<% else %>
  <h3>Student</h3>

  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Family</th>
      <th>Rating</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student %></td>
        <td><%= student.family.family_name %></td>
        <td><%= student.rating %></td>
        <td><%= student.age %></td>
        <td><%= link_to 'Edit', edit_student_path(student), :class=>"btn waves-effect waves-light blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
  <%= will_paginate @students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'students' %>
</span>

    <% end %>

<%= link_to 'New Student', new_student_path %>
